{
  "version": 2,
  "builds": [
    {
      "src": "MariaE_API/routes/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "MariaE_API/routes/server.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
